{
  "name": "pangrum",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "simple-git-hooks && nuxt prepare",
    "lint": "eslint",
    "test:types": "vue-tsc -b --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "docker run --rm --network host -v $(pwd):/work/ -v /tmp/playwright-node-modules:/work/node_modules -w /work/ -it mcr.microsoft.com/playwright:v1.57.0-noble bash -c 'corepack enable && pnpm i && pnpm playwright test tests --update-snapshots'"
  },
  "dependencies": {
    "@nuxt/eslint": "1.12.1",
    "@nuxt/fonts": "0.12.1",
    "@nuxt/test-utils": "3.23.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@unocss/nuxt": "^66.5.11",
    "@unocss/transformer-directives": "^66.5.11",
    "@vercel/kv": "^3.0.0",
    "@vite-pwa/nuxt": "1.1.0",
    "@vueuse/nuxt": "14.1.0",
    "language-packages": "^1.0.1",
    "nuxt": "^4.2.2",
    "nuxt-og-image": "^5.1.13",
    "ohash": "^2.0.11",
    "unocss": "^66.5.11",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "workbox-core": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@vite-pwa/assets-generator": "1.0.2",
    "@vitest/browser-playwright": "4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "@vue/test-utils": "2.4.6",
    "eslint": "^9.39.2",
    "lint-staged": "16.2.7",
    "nano-staged": "0.9.0",
    "playwright-core": "1.57.0",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3",
    "vitest": "4.0.16",
    "vue-tsc": "3.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,vue,json}": [
      "eslint --fix"
    ]
  }
}
