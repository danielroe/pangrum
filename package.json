{
  "name": "pangrum",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "simple-git-hooks && nuxt prepare",
    "party:dev": "partykit dev",
    "party:deploy": "partykit deploy",
    "lint": "eslint",
    "test:types": "vue-tsc -b --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "docker run --rm --network host -v $(pwd):/work/ -v /tmp/playwright-node-modules:/work/node_modules -w /work/ -it mcr.microsoft.com/playwright:v1.57.0-noble bash -c 'corepack enable && pnpm i && pnpm playwright test tests --update-snapshots'"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.84",
    "@nuxt/a11y": "1.0.0-alpha.1",
    "@nuxt/eslint": "1.13.0",
    "@nuxt/fonts": "0.13.0",
    "@nuxt/scripts": "0.13.2",
    "@nuxt/test-utils": "4.0.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@unocss/nuxt": "^66.5.12",
    "@unocss/transformer-directives": "^66.5.12",
    "@vercel/kv": "^3.0.0",
    "@vite-pwa/nuxt": "1.1.0",
    "@vueuse/nuxt": "14.2.0",
    "beasties": "^0.4.0",
    "estree-walker": "^3.0.3",
    "language-packages": "^1.0.1",
    "nuxt": "^4.2.2",
    "nuxt-og-image": "^5.1.13",
    "ohash": "^2.0.11",
    "partysocket": "^1.1.10",
    "std-env": "^3.10.0",
    "unocss": "^66.5.12",
    "uqr": "^0.1.2",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "workbox-core": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0"
  },
  "devDependencies": {
    "@playwright/test": "1.58.1",
    "@vite-pwa/assets-generator": "1.0.2",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vue/test-utils": "2.4.6",
    "eslint": "9.39.2",
    "get-port-please": "3.2.0",
    "lint-staged": "16.2.7",
    "nano-staged": "0.9.0",
    "partykit": "0.0.115",
    "playwright-core": "1.58.1",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vue-tsc": "3.2.4",
    "workbox-background-sync": "7.4.0"
  },
  "pnpm": {
    "packageExtensions": {
      "@nuxt/scripts": {
        "dependencies": {
          "estree-walker": "^3.0.3"
        }
      }
    }
  },
  "packageManager": "pnpm@10.28.2",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,vue,json}": [
      "eslint --fix"
    ]
  }
}
